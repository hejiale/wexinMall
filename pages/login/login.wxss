/* pages/login/login.wxss */

page {
  background-color: #fbf9fe;
}

.headView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 200px;
}

.headImage {
  margin-top: 50px;
  width: 50px;
  height: 50px;
}

.headText {
  margin-top: 5px;
  font-size: 12px;
  color: gray;
}

.alertView {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 60px;
}

.alertTopText {
  margin-left: 20px;
  font-size: 13px;
  line-height: 30px;
}

.alertFootText {
  margin-left: 30px;
  margin-top: 5px;
  font-size: 12px;
  line-height: 20px;
  color: lightgrey;
}

.footView {
  margin-top: 20px;
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
}

.cancelButton {
    width: calc(100%/3);
    background-color: lightgray;
    color: white;
    font-size: 13px;
}
.sureButton {
    width: calc(100%/3);
    background-color: #63a0d4;
    color: white;
    font-size: 13px;
}
