/* pages/person/person.wxss */

page {
  background-color: #fbf9fe;
}

.loginView {
  display: flex;
  flex-direction: column;
  margin-top: 200px;
  width: 100%;
}

.textView {
  display: flex;
  align-content: center;
  height: 50px;
  width: 100%;
}

.clickView {
  display: flex;
  align-items: center;
  bottom: 10px;
  width: 100%;
  height: 50px;
}

.loginButton {
  width: 200px;
  height: 35px;
  background-color: #63a0d4;
  color: white;
  font-size: 12px;
}

.loginText {
  left: 0px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 13px;
  color: gray;
  text-align: center;
}


.personView {
  width: 100%;
  height: 100%;
}

.headView {
  position: relative;
  width: 100%;
  height: 140px;
}
.headBgImage{
  width: 100%;
  height: 100%;
}
.photo_wrap {
  position: absolute;
  top: calc(50% - 50px);
  left: calc(50% - 50px);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userName {
  font-size: 12px;
  color: white;
}

.listView {
  margin-top: 10px;
  height: 100px;
  background-color: white;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.bindPhone {
  margin-top: 10px;
  height: 50px;
  background-color: white;
}

.bindPhoneTag{
  margin-left: 10px;
  font-size: 10px;
  color: #63a0d4;
}
.book {
  margin-top: 10px;
  height: 50px;
  background-color: white;
}

.navigator {
  display: flex;
  height: 50px;
  align-items: center;
}
.titleContent{
  display: flex; 
  align-items: center;
  width: 50%;
  height: 100%;
}
.leftImage {
  margin-left: 5px;
  width: 20px;
  height: 20px;
}

.Text {
  margin-left: 10px;
  font-size: 12px;
}

.arrowImage{
  margin-left: 45%;
  width: 8px;
  height: 14px;
}