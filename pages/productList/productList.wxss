page {
  background-color: #fbf9fe;
}

.alertView {
  display: flex;
  flex-direction: column;
  margin-top: 200px;
  width: 100%;
}

.textView {
  display: flex;
  align-content: center;
  height: 50px;
  width: 100%;
}

.clickView {
  display: flex;
  align-items: center;
  bottom: 10px;
  width: 100%;
  height: 50px;
}

.loginButton {
  width: 200px;
  height: 30px;
  background-color: #63a0d4;
  color: white;
  font-size: 12px;
}

.loginText {
  left: 0px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 13px;
  color: gray;
  text-align: center;
}

.contentView {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.search {
  position: fixed;
  display: flex;
  flex-direction: row;
  top: 0px;
  width: 100%;
  height: 50px;
  align-items: center;
  background-color: white;
}

.scan {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  width: 10%;
  height: 100%;
  margin-left: 5px;
  margin-top: 0px;
}

.scanText {
  margin-top: 5px;
  width: 100%;
  height: 18px;
  font-size: 10px;
  text-align: center;
  color: grey;
}

.search-input {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 80%;
  left: 20px;
  border-radius: 5px;
  align-items: center;
  background-color: #fbf9fe;
  font-size: 13px;
}

.search-icon {
  margin-left: 5px;
  width: 30rpx;
  height: 30rpx;
}

.search-text {
  padding-left: 0px;
  padding-right: 0px;
  height: 40px;
}

.widgets-img {
  width: 16px;
  height: 16px;
}

.widgets-title {
  color: #888;
  font-size: 1px;
}

.storeText {
  font-size: 12px;
  color: gray;
}
.productListView{
  position: absolute;
  margin-top: 50px;
  width: 100%;
  height: 100%;
  background-color: white;
}
.productView {
  display: inline-block;
  flex-direction: column;
  width: 50%;
  height: 380rpx;
}

.productImage {
  margin: 0px;
  width: 100%;
  height: 280rpx;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0px;
  width: 100%;
  height: 80rpx;
}

.productText {
  margin-top: 0px;
  font-size: 13px;
  color: gray;
}

.priceText {
  margin-top: 5px;
  font-size: 14px;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "PingFang SC",
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
  font-weight: 900;
}

.showPropertyBgView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 888;
}

#classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.popContentView {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 0;
  left: 20%;
  width: 80%;
  height: 100%;
  background-color: #fff;
}

.propertyClassView {
  width: 100%;
  height: 100%;
}

.footView {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  background-color: #63a0d4;
  color: white;
  font-size: 13px;
}

.scrollView {
  width: 100%;
  padding-bottom: 40px;
}

.priceView {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80px;
}

.TitleText {
  margin-left: 10px;
  line-height: 20px;
  font-size: 13px;
  color: lightgray;
}

.priceSpaceView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 0px;
  width: 100%;
  height: 60px;
}

.priceSpaceText {
  margin-left: 10px;
  font-size: 11px;
  color: grey;
  width: 80px;
  height: 60px;
  line-height: 60px;
}

.inputPriceText {
  width: 85px;
  background-color: #fbf9fe;
  font-size: 11px;
  text-align: center;
}

.priceSpace {
  width: 10px;
  height: 1px;
  background-color: lightgray;
}

.popClassView {
  margin-top: 0px;
  width: 100%;
  height: 95px;
}

.classesView {
  margin-top: 0px;
  width: 100%;
  height: 100px;
}

.classItem {
  display: inline-block;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 10px;
  margin-top: 5px;
  width: calc((100% - 40px)/3);
  height: 30px;
  text-align: center;
  border-radius: 5px;
}

.classItemText {
  display: inline-block;
  width: 100%;
  line-height: 30px;
  font-size: 11px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.popPropertyView {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: 100%;
}

.propertysView {
  margin-top: 0px;
  width: 100%;
}

