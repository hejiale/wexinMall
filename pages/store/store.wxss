/* pages/store/store.wxss */

page {
  background-color: #fbf9fe;
}

.loginView {
  display: flex;
  flex-direction: column;
  margin-top: 200px;
  width: 100%;
}

.textView {
  display: flex;
  align-content: center;
  height: 50px;
  width: 100%;
}

.clickView {
  display: flex;
  align-items: center;
  bottom: 10px;
  width: 100%;
  height: 50px;
}

.loginButton {
  width: 200px;
  height: 30px;
  background-color: #63a0d4;
  color: white;
  font-size: 12px;
}

.loginText {
  left: 0px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 13px;
  color: gray;
  text-align: center;
}

.storeListView {
  height: 100%;
}

.contentView {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  width: 100%;
  height: 60px;
  background-color: white;
}
.storeLeftView{
  display: flex;
  align-items: center;
  width: 90%;
  height: 100%;
}
.storeRightView{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
  height: 100%;
}
.contentText {
  margin-left: 20px;
  font-size: 13px;
  width: 90%;
  line-height: 60px;
  color: gray;
}
.storeArrowImage{
  width: 8px;
  height: 14px;
}
.show {
  display: block;
}

.hide {
  display: none;
}
